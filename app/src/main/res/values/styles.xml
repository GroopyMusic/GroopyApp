<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/flat_flesh</item>
        <item name="colorPrimaryDark">@color/flat_flesh</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- Theme for dialog SMART LOCK -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/reef_encounter</item>
        <item name="android:textColorPrimary">@color/iceland_poppy</item>
        <item name="android:background">@color/beige</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
    </style>
    <style name="DialogTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:drawableRight">@drawable/ic_lock_outline_black_24dp</item>
    </style>

    <!-- Theme for dialog NO INTERNET -->
    <style name="AppCompatAlertDialogNoInternetStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/DialogNoInternetTitleStyle</item>
    </style>
    <style name="DialogNoInternetTitleStyle">
        <item name="android:textColor">@color/iceland_poppy</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:drawableRight">@drawable/ic_signal_cellular_connected_no_internet_0_bar_black_24dp</item>
    </style>

    <!-- Theme for dialog NOT TODAY -->
    <style name="AppCompatAlertDialogNotTodayStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/reef_encounter</item>
        <item name="android:textColorPrimary">@color/iceland_poppy</item>
        <item name="android:background">@color/beige</item>
        <item name="android:windowTitleStyle">@style/DialogNotTodayTitleStyle</item>
    </style>
    <style name="DialogNotTodayTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:drawableRight">@drawable/ic_error_black_24dp</item>
    </style>

</resources>
